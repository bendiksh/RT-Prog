package main

import . "driver"
import . "fmt"
import . "time"

func main(){
	err, floor := Elev_init()
	if err != 1 {
		Println("Could not initialize")
		return
	}
	
	curr_floor := floor
	
	for {
		p_floor, p_btn := Elev_get_button()
		if(p_ floor == curr_floor){ // only need to open door
			Elev_door_light(1)
			Sleep(1*Second)
			Elev_door_light(0)
		}else if(p_floor < curr_floor){	//call from below
			for Sensors[p_floor] != 1{
				
			}
		}else if(p_floor > curr_floor){ // call from above
		
		}
	}
}
